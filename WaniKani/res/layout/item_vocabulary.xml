<?xml version="1" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_vocabulary_card"
    android:layout_width="280dp"
    android:layout_height="64dp"
    android:background="@android:color/white"
    android:minHeight="64dp"
    android:minWidth="280dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="60dp"
        android:minWidth="280dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/item_vocabulary_srs_level"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/oval_disabled" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_vocabulary_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:ellipsize="marquee"
                android:maxEms="5"
                android:maxLines="1"
                android:text="大した"
                android:textColor="@color/text_gray"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_vocabulary_kana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:maxEms="7"
                    android:maxLines="1"
                    android:text="たいした"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/item_vocabulary_meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-light"
                    android:maxEms="7"
                    android:maxLines="1"
                    android:text="Considerable"
                    android:textColor="@color/text_gray" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_vocabulary_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="58dp"
        android:minWidth="250dp" />
</FrameLayout>